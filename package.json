{
  "name": "ios-nights-api",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js | pino-pretty",
    "test": "NODE_ENV=test node tests/setup.js && NODE_ENV=test jest --verbose",
    "test:coverage": "yarn test --coverage",
    "test:coverage:show": "open coverage/lcov-report/index.html",
    "lint": "eslint src/",
    "infra:start": "docker-compose up -d",
    "infra:stop": "docker-compose down",
    "migrate:make": "knex migrate:make --knexfile ./src/database/knexfile.js",
    "db:migrate": "knex migrate:latest --knexfile ./src/database/knexfile.js",
    "db:rollback": "knex migrate:rollback --knexfile ./src/database/knexfile.js"
  },
  "engines": {
    "node": "v10.15.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strvcom/ios-nights-backend-api.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/strvcom/ios-nights-backend-api/issues"
  },
  "homepage": "https://github.com/strvcom/ios-nights-backend-api#readme",
  "devDependencies": {
    "@strv/eslint-config-javascript": "^9.1.1",
    "eslint": "^5.12.1",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "pino-pretty": "^2.5.0",
    "sinon": "^7.2.3",
    "supertest": "^3.4.2",
    "supertest-koa-agent": "^0.3.0"
  },
  "dependencies": {
    "aws-sdk": "^2.394.0",
    "bcrypt": "^3.0.3",
    "dotenv": "^6.2.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "kcors": "^2.2.2",
    "knex": "^0.16.3",
    "koa": "^2.6.2",
    "koa-body": "^4.0.6",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^4.0.0",
    "koa-router": "^7.4.0",
    "objection": "^1.5.3",
    "pg": "^7.8.0",
    "pino": "^5.10.8",
    "ramda": "^0.26.1",
    "uuid": "^3.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test:coverage && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "config/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/env/*.js",
      "!src/database/migrations/*.js"
    ]
  }
}
